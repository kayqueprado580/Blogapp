{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h3>Nova Postagem</h3>
<div class="card">
    <div class="card-body"></div>
    <form action="/admin/postagens/nova" method="POST">
        <label for="titulo">Titulo: </label>
        <input class="form-control" type="text" id="titulo" name="titulo" placeholder="Titulo">
        <label for="slug">Slug: </label>
        <input class="form-control" type="text" id="slug" name="slug" placeholder="Slug">
        <label for="categoria">Categoria: </label>
        <select class="custom-select mt-2" name="categoria" id="categoria">
            {{#each categorias}}
            <option value="{{_id}}">{{nome}}</option>
            {{else}}
            <option value="0">Nenhuma Categoria existente...</option>
            {{/each}}
        </select>
        <br>
        <label for="descricao">Descrição: </label>
        <input class="form-control" type="text" id="descricao" name="descricao" placeholder="Descrição">
        <label for="conteudo">Conteúdo: </label>
        <textarea class="form-control" name="conteudo" id="conteudo" cols="30" rows="10"></textarea>

        <button type="submit" class="btn btn-success mt-2">Criar</button>
    </form>
</div>
</div>